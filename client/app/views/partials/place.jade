h1 Add Places

form.form-horizontal(ng-submit="addPlace()", name="addPlaceForm")
    .control-group
        label.control-label(for="name") name
        .controls
            input(type="text", data-ng-model="name", placeholder="name", name="name", required, data-ng-minlength="1", data-ng-maxlength="20", autofocus)
    .control-group
        label.control-label(for="lat") lat
        .controls
            input(type="text", data-ng-model="lat", placeholder="lat", name="lat", required, data-ng-minlength="1", data-ng-maxlength="60")
    .control-group
        label.control-label(for="long") long
        .controls
            input(type="text", data-ng-model="long", placeholder="long", name="long", required, data-ng-minlength="1", data-ng-maxlength="60")
    .control-group
        .controls
            button.btn(type="submit", data-ng-disabled="addPlaceForm.$invalid") Submit

    .alert.alert-error(ng-show="addPlaceForm.$invalid && addPlaceForm.$dirty")
        strong Please correct the following errors:
        ul
            li(ng-show="addCatForm.name.$error.required") name is required
            li(ng-show="addCatForm.name.$error.minlength") name has to be at least 1 character long
            li(ng-show="addCatForm.name.$error.maxlength") name has to be at most 20 character long

table.table.table-striped(data-ng-hide="loading")
    thead
        tr
            th name
            th long
            th lat
    tbody
        tr(data-ng-repeat="place in places")
            td {{ place.name }}
            td {{ place.location.coordinates[0] }}
            td {{ place.location.coordinates[1] }}